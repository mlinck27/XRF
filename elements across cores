ggplot(LC_XRF_R, aes(x = depth_cm_1, y = element, color = ID)) +
    geom_line() +
    coord_flip() +
    scale_x_reverse() +
    scale_color_manual(
        name = "LC Cores",
        values = c(
            "LC11" = "blue",
            "LC13" = "green",
            "LC15" = "purple",
            "LC16" = "orange",
            "LC19" = "red")) +
    labs(
        title = "element Concentration vs Depth",
        x = "Depth (cm)",
        y = "element Concentration") +
    theme_minimal()
